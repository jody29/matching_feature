<form action="" oninput="" id="preferenceForm">
    
    <fieldset>
    <legend>Choose console</legend>
    
    <input type="checkbox" name="chosenConsoles" id="playstation">
    <label for="playstation"><img src="../img/playstationLogo.png" alt=""></label>
    
    <input type="checkbox" name="chosenConsoles" id="xbox">
    <label for="xbox"><img src="../img/xboxLogo.png" alt=""></label>
    
    <input type="checkbox" name="chosenConsoles" id="pc">
    <label for="pc"><img src="../img/pcLogo.png" alt=""></label>
    
    <input type="checkbox" name="chosenConsole" id="nintendo">
    <label for="nintendo"><img src="../img/switchLogo.png" alt=""></label>
    </fieldset>
    
    <fieldset>
        <legend>Choose games</legend>
        
        <input type="text" name="games" placeholder="your favorite games...">
        <button>+</button>
    </fieldset>
    
    <input type="submit" value="SAVE PREFERENCES">
    
    
</form>